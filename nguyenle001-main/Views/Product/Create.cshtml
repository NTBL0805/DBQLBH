@model WebBanHang.Models.Products

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Prodcut", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<table class="table-bordered">
    <tr>
        <td>@Html.LabelFor(model => model.NamePro)</td>
        <td>@Html.EditorFor(model => model.NamePro)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(model => model.Price)</td>
        <td>@Html.EditorFor(model => model.Price)</td>
    </tr>
    <tr>
        <td>@Html.DisplayFor(model => model.Category)</td>
        <td>
            @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.listCategory)
        </td>
    </tr>
    <tr>
        <td>@Html.LabelFor(model => model.DecriptionPro)</td>
        <td>@Html.EditorFor(model => model.DecriptionPro)</td>
    </tr>
    <tr>
        <td>@Html.LabelFor(model=>model.ImagePro)</td>
        <td>
            <img src="@Url.Content(Model.ImagePro)" height="170"width="200" id="previewImg"/>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <input type="file" name="UploadImge" onchange="ChangeIamge(this, document.getElementById('previewImg')" />
            <input type="submit" value="new" />
        </td>
    </tr>
</table>
}
